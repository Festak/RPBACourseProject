@model SellTables.Models.ResetEmailViewModel
<hr />
<h4>Reset user email</h4>
@using (Html.BeginForm("ResetEmail", "Account", FormMethod.Post, new { @class = "form-horizontal main_form", role = "form" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.EditorFor(m => m.Email, new { @class = "form-control default-input bg-main-dark main-dark", @placeholder = "Email" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default default-button interactive" value="Reset" />
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
