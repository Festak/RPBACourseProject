@model SellTables.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<hr />
<h4>Change password</h4>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal main_form", role = "form" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(m => m.Type)
        @Html.HiddenFor(model => model.Name)
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control default-input", @placeholder = "password" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control default-input", @placeholder = "confirm password" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Reset" />
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
