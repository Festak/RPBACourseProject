@model IEnumerable<SellTables.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="intro-header container-fluid" style="background-image: url('http://evinko.kz/wp-content/uploads/2012/12/%D0%BC%D0%BE%D0%B4%D0%B5%D1%80%D0%BD%D0%B8%D0%B7%D0%B0%D1%86%D0%B8%D1%8F-_%D1%81%D0%B5%D1%80%D0%B2%D0%B5%D1%80%D0%BD%D0%B0%D1%8F.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>@Resources.Resource.AdminPanel</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container" ng-controller="AdminController">
    <div class="row" id="userList">
        @{
            foreach (var user in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="well well-sm">
                        <div class="row">
                            <div class="col-sm-12 col-md-4 col-xs-12">
                                <img src="@user.AvatarUri" alt="avatar" style="height: 170px; width: 150px;" class="img-rounded img-responsive" />

                            </div>
                            <div class="col-sm-12 col-md-7 col-xs-12">
                                <h4>
                                    @Html.ActionLink(@user.UserName, "UserPage", "Admin", new { area = "", username = user.UserName.ToString() }, null)
                                </h4>

                                <p>
                                    <i class="glyphicon glyphicon-file"
                                       data-container="body"
                                       data-toggle="popover"
                                       data-animation="true"
                                       data-placement="left"
                                       data-content="Creatives count.">@user.Creatives.Count</i>
                                    <br />
                                    <i class="glyphicon glyphicon-envelope"
                                       data-container="body"
                                       data-toggle="popover"
                                       data-animation="true"
                                       data-placement="left"
                                       data-content="Email."></i> @user.Email
                                    <br />
                                    <i class="glyphicon glyphicon-gift"
                                       data-container="body"
                                       data-toggle="popover"
                                       data-animation="true"
                                       data-placement="left"
                                       data-content="Registration date."></i>@user.RegistrationDate
                                    <br />
                                    @foreach (var medal in user.Medals)
                                    {
                                        <img style="width: 20px; height: 20px" src="@medal.ImageUri" title="@medal.Name" />
                                    }

                                </p>
                                @if (user.LockoutEndDateUtc == null)
                                {
                                    <span ng-click="BanUser('@user.UserName')" class="fa fa-ban cursor-pointer">@Resources.Resource.Ban</span>
                                }
                                else
                                {
                                    <span ng-click="UnbanUser('@user.UserName')" class="fa fa-ban cursor-pointer">@Resources.Resource.Unban</span>
                                }
                                <span ng-click="DeleteUser('@user.UserName')" class="fa fa-warning text-danger cursor-pointer">@Resources.Resource.DeleteUser</span>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<script src="~/Scripts/pageScripts/popoverScript.js"></script>
  